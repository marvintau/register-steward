.section, .form-list {
  margin-top: 40rpx;
  height: 140rpx;
  width: 100%;
  background: #fff;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-left: none;
  border-right: none;
  display: flex;
  flex-direction: row;
  align-items: center;
  transition: all 300ms ease;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx;
  border-radius: 50%;
  background-size: cover;
  background-color: white;
}

.avatar:after {
  border: none;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: left;
  justify-content: space-between;
  padding: 20rpx;
  box-sizing: border-box;
  font-size: 87%;
} 

.title{
  text-align: left;
  margin-bottom: 10px;
  font-size : 200%;
  display: block;
}

.info-label{
    font-size: 80%;
    letter-spacing: 0.02em;
    margin: 10rpx;
    text-align: left;
}

.reg-form {
  display: flex;
  flex-flow: row wrap;
  align-items: flex-start;
}

.button-group {
    position: absolute;
    bottom: 12px;
    width: 95%;
  display: flex;
  flex-flow: row wrap;
  align-items: flex-start;
}

.input-group{
    display: block;
    width: 50%;
    margin: 7rpx auto;
    margin-top: 30rpx;
    flex-grow: 1;
}

.desc-text{
    margin: 7rpx auto;
    margin-left: 6rpx;
    font-size: 90%;
    letter-spacing: 0.05em;
}

.input-label{
  font-weight: bold;
  margin: 0 10rpx;
}

input, textarea{
  padding: 5rpx;
  margin: 5rpx;
  border: 1rpx solid #D9d9d9;
  border-radius : 10rpx;
}

button{
  padding: -1rpx;
  /* letter-spacing: 0.1em; */
  background-color: #FEFEFE;
  border: 0.1rpx solid black;
  border-radius: 40rpx;
}

.submit{
  width:97%;
  margin: 5px;
  text-align:center;
}

.picker{
  padding: 10rpx 5rpx;
  margin: 5rpx;
  border: 1rpx solid #D9d9d9;
  border-radius : 10rpx;
}

radio-group{
  margin-top: 20rpx;
  flex: column;
}

.radio{
  font-size: 90%;
  margin: 10rpx 0;
  margin-left: 10rpx;
  display: block;
}

.checkbox{
  font-size: 90%;
  margin: 20rpx 0;
  margin-left: 10rpx;
  display: block;
}

.hdivider{
    margin: 10rpx;
    border: 0.5rpx solid;
}